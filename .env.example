# ===========================================
# DOCKER DEVELOPMENT ENVIRONMENT
# ===========================================
# Copy this file to .env for Docker setup:
# cp .env.example .env

# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@postgres:5432/my_app_db"
DB_HOST=postgres
DB_PORT=5432
DB_NAME=my_app_db
DB_USER=postgres
DB_PASSWORD=your_password

# Better Auth Configuration
BETTER_AUTH_SECRET="your-secret-key-here-make-it-long-and-random"
BETTER_AUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_NAME="My Next.js App"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment
NODE_ENV=development

