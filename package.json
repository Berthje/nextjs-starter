{
  "name": "nextjs-starter-kit",
  "version": "1.0.0",
  "description": "A complete Next.js starter kit with PostgreSQL, Better Auth, and Docker support",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "npm run setup:env && echo 'âœ… Setup complete! Run npm run docker:dev to start'",
    "setup:env": "node scripts/setup-env.js",
    "docker:dev": "docker-compose --env-file .env up --build",
    "docker:dev:detached": "docker-compose --env-file .env up --build -d",
    "docker:dev:stop": "docker-compose down",
    "docker:prod": "docker-compose --env-file .env.prod -f docker-compose.prod.yml up --build -d",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart app",
    "docker:clean": "docker-compose down -v --rmi all --remove-orphans"
  },
  "dependencies": {
    "better-auth": "^1.2.8",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "next": "15.3.3",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
